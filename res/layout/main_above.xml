<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00B6D3">

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/app_name"
			android:id="@+id/tv_title"
			android:textColor="@color/title"
			android:textSize="20sp"
			android:layout_marginTop="10dp"
			android:layout_centerHorizontal="true"/>

	<y.q.wifisend.widget.CircleImageView
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:id="@+id/iv_photo"
			android:layout_marginLeft="30dp"
			android:src="@mipmap/head_portrait_1"
			android:scaleType="centerCrop"
			app:border_width="1dp"
			app:border_color="#FFFFFFFF"
			android:layout_centerVertical="true"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="BayMax"
			android:id="@+id/iv_name"
			android:layout_toEndOf="@id/iv_photo"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:textColor="@color/title"
			android:textSize="18sp"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/inviteFriends"
			android:id="@+id/tv_inviteFriends"
			android:layout_alignParentEnd="true"
			android:layout_alignParentBottom="true"
			android:background="@drawable/invite_frends_background"
			android:layout_marginBottom="30dp"
			android:paddingTop="4dp"
			android:paddingBottom="4dp"
			android:textSize="16sp"
			android:paddingLeft="10dp"
			android:paddingRight="3dp"/>

	<ImageView
			android:layout_width="25dp"
			android:layout_height="25dp"
			android:id="@+id/iv_history"
			android:src="@mipmap/history"
			android:layout_marginRight="10dp"
			android:layout_marginTop="10dp"
			android:layout_alignParentEnd="true"/>
</RelativeLayout>